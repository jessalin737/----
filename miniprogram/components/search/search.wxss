/* components/search/search.wxss */
.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 3;
  height: 84rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.search {
  flex:1;
  background: #1779FF;
  color: #fff;
  margin-left: 20rpx;
}
.search .btn-font{
  font-size: 30rpx;
}
.in-bar {
  color: #999;
}
.find {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}
