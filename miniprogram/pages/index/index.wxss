/* miniprogram/pages/index/index.wxss */
.top {
  width: 100%;
  height: 400rpx;
  background: #1779FF;
  padding-top: 30rpx;
  position: relative;
}

.center {
  width: 95%;
  height: 320rpx;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border-radius: 10rpx;
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 160rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid #EEEEEE;
}

.center_img {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  overflow: hidden;
}
.nickname{
  margin-top: 10px;
  font-size: 36rpx;
  color: rgb(156, 146, 146);
}
.center_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.center_img .user_head {
  width: 100%;
  height: 100%;
}

.center_info {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 60rpx;
}

.center_name {
  font-size: 40rpx;
  color: rgb(62, 61, 61);
}

.center_down {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.center_rank {
  width: 50%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.rank_text {
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 10rpx;
  color: #AAAAAA;
}

.center_rank image {
  width: 35px;
  height: 35px;
}

.center_score {
  width: 50%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}

.center_score image {
  width: 70rpx;
  height: 70rpx;
}

.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}