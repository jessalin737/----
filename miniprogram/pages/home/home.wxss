/* miniprogram/pages/home/home.wxss */
page{
    background-image: linear-gradient(to top, #00c5fbb0 0%, #005bea 100%);
}
.border{
    width: 95%;
    height: 150px;
    background: rgb(249, 248, 248);
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    border-radius: 5px;
    border: 1px solid #e0dddd;
    box-shadow:0 2px 10px 6px rgba(0, 0, 0, .12);
    position: relative;
    margin-bottom: 8px;
}
.banner {
  height: 160rpx;
}
.icon{
    width: 80px;
    height: 80px;
    position: absolute;
    top: 30px;
    left: 20px;
    font-size:26px;
    box-shadow:0 2px 10px 6px rgba(243, 242, 242, 0.12); 
}
.icon_text{
    display: block;
    position: absolute;
    left: 120px;
    top: 40px;
    color: #9c9999;

}